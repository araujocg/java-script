<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/category/add">
    <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categories}}
    <div class="flex card my-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>{{slug}}</small><br/>
            <small>Data de criação: {{date}}</small>
        </div>
        <div>
            <a href="/admin/category/edit/{{id}}">
                <button>Edit</button>
            </a>
        </div>
    </div>
{{else}}

{{/each}}