<h2>Lista de Posts</h2>
<hr>
<a href="/admin/category/add">
    <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each posts}}
    <div class="flex card my-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>{{slug}}</small><br/>
            <small>Data de criação: {{date}}</small>
        </div>
        <div>
            <a href="/admin/category/edit/{{_id}}"><button class="btn btn-success m-2">Edit</button></a>
            <a href="/admin/category/delete/{{_id}}"><button class="btn btn-danger">Del</button></a>
        </div>
    </div>
{{else}}

{{/each}}