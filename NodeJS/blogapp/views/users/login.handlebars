{{#if error}}
    <div class="alert alert-danger">{{error}}</div>
{{/if}}

{{#if error_msg}}
    <div class="alert alert-danger">{{error_msg}}</div>
{{/if}}

{{#if success_msg}}
    <div class="alert alert-success">{{success_msg}}</div>
{{/if}}

<h4>Login:</h4>
<div class="card">
    <div class="card-body">
        <form action="/users/login" method="post">
            <label for="Email">Email: </label>
            <input type="text" name="email" id="email" placeholder="example@example.com" class="form-control my-2" required>
            <label for="password">Senha: </label>
            <input type="password" name="password" id="password" class="form-control my-2" required>
            <button type="submit" class="btn btn-success mt-2">Entrar</button>
        </form>
    </div>
</div>