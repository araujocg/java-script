<h1>{{category.name}}</h1>
{{#each posts}}
    <div class="flex card my-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>{{description}}</p>
            <a href="/post/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>Data de publicação: {{date}}</small>
        </div>
    </div>
{{else}}
    <h5>Nenhuma publicação</h5>
{{/each}}